extends user-layout

block cust-css
  link(rel='stylesheet', href='/css/jstree.style.css')
  link(rel='stylesheet', href='/css/toastr.css')

block content
  if displayForm
    .row
      .col-md-7
        .portlet.light.bordered
          .portlet-title
            .caption
              span.caption-subject.font-green-sharp.bold.uppercase= displayForm.name + " - 表单实例"
          .portlet-body
            .dataTables_wrapper.no-footer
              table.table.table-striped.table-hover.table-bordered.dataTable.no-footer(role="grid")
                thead
                  tr(role="row")
                    th.sorting(tabindex="0", rowspan="1", colspan="1") 订单号
                    th.sorting(tabindex="0", rowspan="1", colspan="1") 产品编号
                    th.sorting(tabindex="0", rowspan="1", colspan="1") 类别
                    th.sorting(tabindex="0", rowspan="1", colspan="1") 规格
                    th.sorting(tabindex="0", rowspan="1", colspan="1") 直径
      .col-md-5.form-card(id=displayForm._id)
        .portlet.light.bordered
          .portlet-title
            .caption
              span.caption-subject.font-green-sharp.bold.uppercase= displayForm.name
              span.caption-helper
            .actions
               a.btn.btn-outline.btn-circle.expand.hidden(href="#")
                  i.fa.fa-expand &nbsp;展开
               a.btn.btn-outline.btn-circle.compress.hidden(href="#")
                  i.fa.fa-compress &nbsp;收起
          .portlet-body
            .tree-container
              .tree-actions.hidden
              .tree-body
          .portlet-footer
            .tree-header.form-inline.hidden
              .row
                .form-group.col-md-6
                  label 制表
                  input.form-control(type='text', name='author', disabled)
                .form-group.col-md-6
                  label 制表日期
                  input.form-control(type='text', name='created', disabled)
              .row
                .form-group.col-md-6
                  label 审核
                  input.form-control(type='text', name='auditor', disabled)
                .form-group.col-md-6
                  label 审核日期
                  input.form-control(type='text', name='audit_date', disabled)
              .row
                .portlet-actions.pull-right(style="margin-right:14px")
                  button.cancel.btn.btn-default 取消
                  button.edit.btn.btn-primary 保存

  else
    .note.note-info
      h4.block 您没有任何授权的表单。

block cust-js
  script(src='/js/vendor/jstree.js')
  script(src='/js/vendor/toastr.min.js')
  script(src='/js/user/order-plan.js')
