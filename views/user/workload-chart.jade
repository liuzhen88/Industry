extends user-layout
block content
    .row.main
        .col-md-12
            .portlet.light.bordered
                .portlet-title
                    .caption
                        .caption-subject.font-green-sharp.bold.uppercase 生产量报表
                .portlet-body(style="height:400px")
                    .form-group(style="width:10%;float:left;margin-right:15px")
                        label.control-label 车间*
                        select#sel-cj.form-control
                    .form-group(style="width:10%;float:left;margin-right:15px")
                        label.control-label 班组*
                        select#sel-bz.form-control
                    .form-group(style="width:10%;float:left;margin-right:15px")
                        label.control-label 工段产品*
                        select#sel-gdcp.form-control
                            option(value="", disabled selected)
                            option(value="g_virtual_library") 捻股
                            option(value="s_virtual_library") 合绳
                    .form-group(style="width:10%;float:left")
                        label.control-label 报表类型*
                        select#sel-type.form-control
                            option(value="", disabled selected)
                            option(value="years") 总报表
                            option(value="year") 年报表
                            option(value="month") 月报表
                            option(value="week") 周报表
                            option(value="day") 日报表
                    .form-group.type.year-begin(style="width:10%;float:left;margin-left:15px;display:none")
                        label 开始年份*
                        input#ipt-year-begin.form-control(type='text')
                    .form-group.type.year-end(style="width:10%;float:left;margin-left:15px;display:none")
                        label 结束年份*
                        input#ipt-year-end.form-control(type='text')
                    .form-group.type.year(style="width:10%;float:left;margin-left:15px;display:none")
                        label 年*
                        input#ipt-year.form-control(type='text')
                    .form-group.type.month(style="width:10%;float:left;margin-left:15px;display:none")
                        label 月*
                        select#sel-month.form-control(type='text')
                            option(value="", disabled selected)
                            option(value="1") 1月
                            option(value="2") 2月
                            option(value="3") 3月
                            option(value="4") 4月
                            option(value="5") 5月
                            option(value="6") 6月
                            option(value="7") 7月
                            option(value="8") 8月
                            option(value="9") 9月
                            option(value="10") 10月
                            option(value="11") 11月
                            option(value="12") 12月
                    .form-group.type.week(style="width:10%;float:left;margin-left:15px;display:none")
                        label 周*
                        select#sel-week.form-control(type='text')
                            option(value="", disabled selected)
                            option(value="1,2,3,4,5,6,7") 1周-7周
                            option(value="8,9,10,11,12,13,14") 8周-14周
                            option(value="15,16,17,18,19,20,21") 15周-21周
                            option(value="22,23,24,25,26,27,28") 22周-28周
                            option(value="29,30,31,32,33,34,35") 29周-35周
                            option(value="36,37,38,39,40,41,42") 36周-42周
                            option(value="43,44,45,46,47,48,49") 43周-49周
                            option(value="50,51,52,53") 50周-53周
                    .form-group.type.day(style="width:10%;float:left;margin-left:15px;margin-right:15px;display:none")
                        label 日*
                        input#ipt-day.form-control(type='text')
                    .form-group.sel-item(style="width:12%;float:left;margin-right:15px;display:none")
                        label.control-label 按条件筛选*
                        select#sel-item.form-control
                            option(value="") 全部
                            option(value="jth") 机台号
                            option(value="czg") 操作工
                            option(value="jg") 结构
                    .form-group.item.jth(style="width:12%;float:left;margin-right:15px;display:none")
                        label.control-label 机台号*
                        select#sel-jth.form-control
                    .form-group.item.czg(style="width:12%;float:left;margin-right:15px;display:none")
                        label.control-label 操作工*
                        select#sel-czg.form-control
                    .form-group.item.jg(style="width:12%;float:left;margin-right:15px;display:none")
                        label.control-label 结构*
                        input#ipt-jg.form-control(type='text')
                    button#search.btn.green(style="float:right;margin-top:25px") 查看报表
                    div#chart
                    div.datatb
                        .dataTables_wrapper.no-footer(style="display:none")
                            table#tab.table.table-striped.table-hover.table-bordered.dataTable.no-footer(role="grid")
                                thead
                                    tr(role="row")
                                        th #
                                        th 机台号
                                        th 操作工
                                        th 结构
                                        th 直径
                                        th 捻向
                                        th 类别
                                        th 米数
                                        th 备注

block cust-js
    script(src='/js/vendor/plugins/ichart/js/ichart.1.2.min.js')
    script(src='/js/user/workload.js')
