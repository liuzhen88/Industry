extends admin-layout
block cust-css
    link(rel='stylesheet', href='/css/bootstrap-datetimepicker2.css')
    link(rel='stylesheet', href='/js/vendor/plugins/select2/select2.css')
    style
        | .table > thead > tr > th{text-align:center;vertical-align:middle;border:1px solid #dddddd}
block content
    h3.page-title 半金属芯结构表表管理
    .row
    .col-md-12
        .portlet
            .portlet-title
                .caption
                    i.fa.fa-user
                    | 现有半金属芯结构表列表
                .actions
                    a.btn-new.btn.default.yellow-stripe(href="#")
                        i.fa.fa-plus
                        span.hidden-480 &nbsp;新半金属芯结构表
            .portlet-body
                .dataTables_wrapper.no-footer
                    table#tab.table.table-striped.table-hover.table-bordered.dataTable.no-footer(role="grid")
                        thead
                            tr
                                th(rowspan=2) #
                                th(rowspan=2) 半金属芯结构
                                th(colspan=2) 半金属绳芯芯股结构
                                th(rowspan=2) 外层钢丝规格数
                                th(rowspan=2) 说明
                                th(rowspan=2) 操作
                            tr
                                th 中心（纤维芯）
                                th 外层钢丝根数
        .modal.new
            .modal-dialog
                form.form-horizontal(method="POST", action="internalForm/add?subForm=bjsxjgb", role="form")
                    .modal-content
                        .modal-header
                            h4.modal-title 新半金属芯结构表
                        .modal-body
                            .form-group
                                .col-md-12
                                    label.control-label 半半金属芯结构
                                    input.form-control(name="bjssxjg", type="text")
                            .form-group
                                .col-md-12
                                    label.control-label 半金属绳芯芯股结构 ↓
                            .form-group
                                .col-md-6
                                    label.control-label 中心（纤维芯）
                                    input.form-control(name="zxxwx", type="text")
                                .col-md-6
                                    label.control-label 外层钢丝根数
                                    input.form-control(name="wcgsgs", type="text")
                            .form-group
                                .col-md-12
                                    label.control-label 外层钢丝规格数
                                    input.form-control(name="wcgsggs", type="text")
                            .form-group
                                .col-md-12
                                    label.control-label 说明
                                    textarea.form-control(name="explain", row="3")
                        .modal-footer
                            button.btn.btn-default(type="button",id="cancel", data-dismiss="modal") 取消
                            button.save.btn.btn-primary(type="submit",id="submit") 保存
                            button.save.btn.yellow(type="button",id="update") 修改
                            button.btn.red(id="delete" style="position:absolute;left:10px;bottom:15px;background-color:rgb(245,128,128);") 删除
block page-js
    script(src='/js/vendor/bootstrap-datetimepicker2.js')
    script(src='/js/vendor/bootstrap-datetimepicker.zh-CN.js')
    script(src='/js/vendor/plugins/select2/select2.js')
    script(src="/js/admin/bjsxjgb.js")
                                                    