    style
        | .table > thead > tr > th{text-align:center;vertical-align:middle;border:1px solid #dddddd}
block content
    h3.page-title 工艺主股表表管理
    .row
    .col-md-12
        .portlet
            .portlet-title
                .caption
                    i.fa.fa-user
                    | 现有工艺主股表列表
                .actions
                    a#downloadBtn.btn.default.yellow-stripe(href="internalForm/downloadGybzg")
                        i.fa.fa-download
                        span.hidden-480 &nbsp;下载Excel
                    a#uploadBtn.btn.default.yellow-stripe(href="#")
                        i.fa.fa-upload
                        span.hidden-480 &nbsp;上传Excel
                    a.btn-new.btn.default.yellow-stripe(href="#",onclick="$('form').submit()")
                        i.fa.fa-plus
                        span.hidden-480 &nbsp;新的工艺表
            .portlet-body
                .dataTables_wrapper.no-footer
                    table#tab.table.table-striped.table-hover.table-bordered.dataTable.no-footer(role="grid")
                        thead
                            tr
                                th(rowspan=3) #
                                th(rowspan=3) 钢丝绳结构
                                th(rowspan=3) 钢丝绳公称直径（mm）
                                th(rowspan=3) 成绳捻距
                                th(colspan=21) 主股
                                th(colspan=2) 金属绳芯
                                th(rowspan=3) 纤维芯
                                th(rowspan=3) 半金属绳芯
                                th(rowspan=3) 操作
                            tr
                                th(rowspan=2) 主股股数
                                th(colspan=5) 主股中钢丝直径
                                th(colspan=5) 主股中钢丝根数
                                th(colspan=2) 压实股股径（mm）
                                th(colspan=4) 主股股绳直径(mm)
                                th(colspan=4) 主股股绳捻距
                                th(rowspan=2) 金属绳芯结构
                                th(rowspan=2) 金属绳芯直径
                            tr(role="row")
                                th 中心丝
                                th 第1层
                                th 第2层
                                th 第3层
                                th 第4层
                                th 中心丝
                                th 第1层
                                th 第2层
                                th 第3层
                                th 第4层
                                th 压前
                                th 压后
                                th 第1层
                                th 第2层
                                th 第3层
                                th 第4层
                                th 第1层
                                th 第2层
                                th 第3层
                                th 第4层
    .modal.new
