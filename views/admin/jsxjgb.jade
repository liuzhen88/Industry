extends admin-layout
block cust-css
    link(rel='stylesheet', href='/css/bootstrap-datetimepicker2.css')
    link(rel='stylesheet', href='/js/vendor/plugins/select2/select2.css')
    style
        | .table > thead > tr > th{text-align:center;vertical-align:middle;border:1px solid #dddddd}
block content
    h3.page-title 金属芯结构表表管理
    .row
    .col-md-12
        .portlet
            .portlet-title
                .caption
                    i.fa.fa-user
                    | 现有金属芯结构表列表
                .actions
                    a.btn-new.btn.default.yellow-stripe(href="#")
                        i.fa.fa-plus
                        span.hidden-480 &nbsp;新金属芯结构表
            .portlet-body
                .dataTables_wrapper.no-footer
                    table#tab.table.table-striped.table-hover.table-bordered.dataTable.no-footer(role="grid")
                        thead
                            tr
                                th(rowspan=4) #
                                th(rowspan=4) 金属芯结构
                                th(colspan=2, rowspan=2) 股层结构（单位：股个数）
                                th(rowspan=4,width="200px") 说明
                                th(colspan=22) 金属芯芯结构
                                th(rowspan=4) 操作
                            tr
                                th(colspan=11) 金属芯中心股
                                th(colspan=11) 金属芯外股
                            tr
                                th(rowspan=2) 中心股
                                th 外股
                                th(colspan=5) 股结构 (单位：丝根数)
                                th(colspan=4) 钢丝规格数（单位：种类）
                                th(colspan=2) 中心股捻制
                                th(colspan=5) 股结构 (单位：丝根数)
                                th(colspan=4) 钢丝规格数（单位：种类）
                                th(colspan=2) 金属芯捻制
                            tr(role="row")
                                th 第1层
                                th 中心丝
                                th 第1层
                                th 第2层
                                th 第3层
                                th 股结构
                                th 中心丝
                                th 第1层
                                th 第2层
                                th 第3层
                                th(width="100px") 捻制次数
                                th(width="100px") 说明
                                th 中心丝
                                th 第1层
                                th 第2层
                                th 第3层
                                th 股结构
                                th 中心丝
                                th 第1层
                                th 第2层
                                th 第3层
                                th(width="100px") 捻制次数
                                th(width="100px") 说明
        .modal.new
            .modal-dialog
                form.form-horizontal(method="POST", action="internalForm/add?subForm=jsxjgb", role="form")
                    .modal-content
                        .modal-header
                            h4.modal-title 新金属芯结构表
                        .modal-body
                            .form-group
                                .col-md-12
                                    label.control-label 金属芯结构
                                    input.form-control(name="metal_core_structure", type="text")
                            .form-group
                                .col-md-12
                                    label.control-label 股层结构(单位：股个数)
                            .form-group
                                .col-md-3
                                    label.control-label 中心股
                                    input.form-control(name="gc_center", type="text")
                                .col-md-3
                                    label.control-label 外股第一层
                                    input.form-control(name="gc_wg_plies_1", type="text")
                                .col-md-6
                                    label.control-label 说明
                                    textarea.form-control(name="gc_explain", row="3")
                            .form-group
                                .col-md-12
                                    label.control-label 中心股: 股结构(单位：丝根数)
                            .form-group
                                .col-md-3
                                    label.control-label 中心丝
                                    input.form-control(name="xg_center_wire", type="text")
                                .col-md-3
                                    label.control-label 第一层
                                    input.form-control(name="xg_plies_1", type="text")
                                .col-md-3
                                    label.control-label 第二层
                                    input.form-control(name="xg_plies_2", type="text")
                                .col-md-3
                                    label.control-label 第三层
                                    input.form-control(name="xg_plies_3", type="text")
                            .form-group
                                .col-md-3
                                    label.control-label 股结构
                                    input.form-control(name="xg_structure", type="text")
                                .col-md-3
                                    label.control-label 捻制次数
                                    input.form-control(name="zxg_nzcs", type="text")
                                .col-md-6
                                    label.control-label 说明
                                    textarea.form-control(name="xg_plies_explain", row="3")
                            .form-group
                                .col-md-12
                                    label.control-label 中心股: 钢丝规格数（单位：种类）
                            .form-group
                                .col-md-3
                                    label.control-label 中心丝
                                    input.form-control(name="xg_gg_center_wire", type="text")
                                .col-md-3
                                    label.control-label 第一层
                                    input.form-control(name="xg_gg_plies_1", type="text")
                                .col-md-3
                                    label.control-label 第二层
                                    input.form-control(name="xg_gg_plies_2", type="text")
                                .col-md-3
                                    label.control-label 第三层
                                    input.form-control(name="xg_gg_plies_3", type="text")
                            .form-group
                                .col-md-12
                                    label.control-label 外股: 股结构 (单位：丝根数)
                            .form-group
                                .col-md-3
                                    label.control-label 中心丝
                                    input.form-control(name="wg_center_wire", type="text")
                                .col-md-3
                                    label.control-label 第一层
                                    input.form-control(name="wg_plies_1", type="text")
                                .col-md-3
                                    label.control-label 第二层
                                    input.form-control(name="wg_plies_2", type="text")
                                .col-md-3
                                    label.control-label 第三层
                                    input.form-control(name="wg_plies_3", type="text")
                            .form-group
                                .col-md-3
                                    label.control-label 股结构
                                    input.form-control(name="wg_structure", type="text")
                                .col-md-3
                                    label.control-label 捻制次数
                                    input.form-control(name="wg_nzcs", type="text")
                                .col-md-6
                                    label.control-label 说明
                                    textarea.form-control(name="wg_explain", row="3")
                            .form-group
                                .col-md-12
                                    label.control-label 外股: 钢丝规格数（单位：种类）
                            .form-group
                                .col-md-3
                                    label.control-label 中心丝
                                    input.form-control(name="wg_gg_center_wire", type="text")
                                .col-md-3
                                    label.control-label 第一层
                                    input.form-control(name="wg_gg_plies_1", type="text")
                                .col-md-3
                                    label.control-label 第二层
                                    input.form-control(name="wg_gg_plies_2", type="text")
                                .col-md-3
                                    label.control-label 第三层
                                    input.form-control(name="wg_gg_plies_3", type="text")
                        .modal-footer
                            button.btn.btn-default(type="button",id="cancel", data-dismiss="modal") 取消
                            button.save.btn.btn-primary(type="submit",id="submit") 保存
                            button.save.btn.yellow(type="button",id="update") 修改
                            button.btn.red(id="delete" style="position:absolute;left:10px;bottom:15px;background-color:rgb(245,128,128);") 删除
