    script(src='/js/vendor/plugins/jquery-file-upload/js/jquery.iframe-transport.js')
    script(src='/js/vendor/plugins/jquery-file-upload/js/jquery.fileupload.js')
    script(src='/js/vendor/bootstrap-datetimepicker2.js')
    script(src='/js/vendor/bootstrap-datetimepicker.zh-CN.js')
    script(src='/js/vendor/plugins/select2/select2.js')
    script(src="/js/admin/gybjsx.js")
                                                    