extends admin-layout

block cust-css
  link(rel='stylesheet', href='/css/bootstrap-datetimepicker2.css')
  link(rel='stylesheet', href='/js/vendor/plugins/select2/select2.css')

block content
  h3.page-title 人员管理
  .row
    .col-md-12
      .portlet
        .portlet-title
          .caption
            i.fa.fa-user
            | 现有人员列表
          .actions
            a.btn-new.btn.default.yellow-stripe(href="#")
              i.fa.fa-plus
              span.hidden-480 &nbsp;新人员
        .portlet-body
          .dataTables_wrapper.no-footer
            table#tab.table.table-striped.table-hover.table-bordered.dataTable.no-footer(role="grid")
              thead
                tr(role="row")
                  th(tabindex="0", width="2%", rowspan="1", colspan="1") #
                  th(tabindex="0", width="3%", rowspan="1", colspan="1") 姓
                  th(tabindex="0", width="3%", rowspan="1", colspan="1") 名
                  th(tabindex="0", width="10%", rowspan="1", colspan="1") 用户名
                  th(tabindex="0", width="15%", rowspan="1", colspan="1") 角色
                  th(tabindex="0", width="10%", rowspan="1", colspan="1") 所属车间
                  th(tabindex="0", width="10%", rowspan="1", colspan="1") 所属班组
                  th(tabindex="0", width="10%", rowspan="1", colspan="1") 所属工段
                  th(tabindex="0", width="13%", rowspan="1", colspan="1") 电子邮件
                  th(tabindex="0", width="3%", rowspan="1", colspan="1") 性别
                  th(tabindex="0", width="10%", rowspan="1", colspan="1") 电话
                  th(tabindex="0", width="3%", rowspan="1", colspan="1") 操作
    .modal.new
      .modal-dialog
        form.form-horizontal(method="POST", action="../admin/user", role="form")
          .modal-content
            .modal-header
              h4.modal-title 新人员
            .modal-body
              .form-group
                .col-md-2
                  label.control-label 姓*
                  input.form-control(name="last_name", type="text")
                .col-md-2
                  label.control-label 名*
                  input.form-control(name="first_name", type="text")
                .col-md-3
                  label.control-label 用户名*
                  input.form-control(name="username", type="text")
                .col-md-5
                  label.control-label 电子邮件
                  input.form-control(name="email", type="text")
              .form-group
                .col-md-12
                  label.control-label 角色(默认操作工)
                  input.form-control(name="roles", multiple)
              .form-group
                .col-md-4
                  label.control-label 工段选择
                  input.form-control(name="org3", multiple)
                .col-md-4
                  label.control-label 车间选择
                  input.form-control(name="org1", multiple)
                .col-md-4
                  label.control-label 班组选择
                  input.form-control(name="org2", multiple)
              .form-group
                .col-md-3
                  label.control-label 性别
                  .radio-list
                    label.radio-inline
                      input(type="radio", name="sex", value="M")
                      |男
                    label.radio-inline
                      input(type="radio", name="sex", value="F")
                      |女
                .col-md-3
                  label.control-label 生日
                  input.form-control(type="text",name="birthday")
                .col-md-3
                  label.control-label 电话
                  input.form-control(name="telephone", type="text")
              .form-group
                .col-md-12
                  label.control-label 备注
                  textarea.form-control(name="comment", row="3")
            .modal-footer
              button.btn.btn-default(type="button",id="cancel", data-dismiss="modal") 取消
              button.save.btn.btn-primary(type="button",id="submit") 保存
              button.save.btn.yellow(type="button",id="update") 修改
              button.btn.red(id="delete" style="position:absolute;left:10px;bottom:15px;background-color:rgb(245,128,128);") 删除

block page-js
  script(src='/js/vendor/bootstrap-datetimepicker2.js')
  script(src='/js/vendor/bootstrap-datetimepicker.zh-CN.js')

  script(src='/js/vendor/plugins/select2/select2.js')
  script(src="/js/admin/user.js")
