extends admin-layout
block cust-css
    link(rel='stylesheet', href='/css/bootstrap-datetimepicker2.css')
    link(rel='stylesheet', href='/js/vendor/plugins/select2/select2.css')
    style
        | .table > thead > tr > th{text-align:center;vertical-align:middle;border:1px solid #dddddd}
block content
    h3.page-title 钢丝绳结构表表管理
    .row
    .col-md-12
        .portlet
            .portlet-title
                .caption
                    i.fa.fa-user
                    | 现有钢丝绳结构表列表
                .actions
                    a.btn-new.btn.default.yellow-stripe(href="#")
                        i.fa.fa-plus
                        span.hidden-480 &nbsp;新钢丝绳结构表
            .portlet-body
                .dataTables_wrapper.no-footer
                    table#tab.table.table-striped.table-hover.table-bordered.dataTable.no-footer(role="grid")
                        thead
                            tr
                                th(rowspan=2) #
                                th(rowspan=2) 钢丝绳结构
                                th#custTh1(colspan=4) 股层结构（单位：股个数）
                                th#custTh2(colspan=3) 股规格数（单位：种类）
                                th(rowspan=2,width="100px") 说明
                                th(rowspan=2,width="100px") 合绳次数
                                th#custTh3(colspan=8) 股绳结构（单位：钢丝根数）
                                th#custTh4(colspan=4) 钢丝规格数（单位：种类）
                                th(rowspan=2,width="100px") 说明
                                th(rowspan=2,width="100px") 捻制次数
                                th(rowspan=2) 操作
                            tr#cusTr

        .modal.new
            .modal-dialog
                form.form-horizontal(method="POST", action="internalForm/add?subForm=gssjgb", role="form")
                    .modal-content
                        .modal-header
                            h4.modal-title 新钢丝绳结构表
                        .modal-body
                            .form-group
                                .col-md-12
                                    label.control-label 钢丝绳结构
                                    input.form-control(name="wire_rope_structure", type="text")
                            .form-group
                                .col-md-12
                                    label.control-label 股层结构（单位：股个数）↓
                            .form-group
                                .col-md-12
                                    label.control-label 层数
                                    input.form-control(name="gc_plies", type="text")
                            .form-group
                                .col-md-4
                                    label.control-label 第1层
                                    input.form-control(name="gc_plies_1", type="text")
                                .col-md-4
                                    label.control-label 第2层
                                    input.form-control(name="gc_plies_2", type="text")
                                .col-md-4
                                    label.control-label 第3层
                                    input.form-control(name="gc_plies_3", type="text")
                            .form-group
                                .col-md-12
                                    label.control-label 股规格数（单位：种类）↓
                            .form-group
                                .col-md-4
                                    label.control-label 第1层
                                    input.form-control(name="ggg_plies_1", type="text")
                                .col-md-4
                                    label.control-label 第2层
                                    input.form-control(name="ggg_plies_2", type="text")
                                .col-md-4
                                    label.control-label 第3层
                                    input.form-control(name="ggg_plies_3", type="text")
                            .form-group
                                .col-md-6
                                    label.control-label 说明
                                    textarea.form-control(name="gc_explain", row="3")
                                .col-md-6
                                    label.control-label 合绳次数
                                    input.form-control(name="hscs", type="text")
                            .form-group
                                .col-md-12
                                    label.control-label 股绳结构（单位：钢丝根数）↓
                            .form-group
                                .col-md-4
                                    label.control-label 纤维芯
                                    input.form-control(name="gs_fiber_core", type="text")
                                .col-md-4
                                    label.control-label 中心丝
                                    input.form-control(name="gs_center_wire", type="text")
                                .col-md-4
                                    label.control-label 层数
                                    input.form-control(name="gs_plies", type="text")
                            .form-group
                                .col-md-3
                                    label.control-label 第1层
                                    input.form-control(name="gs_plies_1", type="text")
                                .col-md-3
                                    label.control-label 第2层
                                    input.form-control(name="gs_plies_2", type="text")
                                .col-md-3
                                    label.control-label 第3层
                                    input.form-control(name="gs_plies_3", type="text")
                                .col-md-3
                                    label.control-label 第四层
                                    input.form-control(name="gs_plies_4", type="text")
                            .form-group
                                .col-md-12
                                    label.control-label 股结构
                                    input.form-control(name="gs_structure", type="text")
                            .form-group
                                .col-md-12
                                    label.control-label 钢丝规格数（单位：种类）↓
                            .form-group
                                .col-md-3
                                    label.control-label 第1层
                                    input.form-control(name="gsi_plies_1", type="text")
                                .col-md-3
                                    label.control-label 第2层
                                    input.form-control(name="gsi_plies_2", type="text")
                                .col-md-3
                                    label.control-label 第3层
                                    input.form-control(name="gsi_plies_3", type="text")
                                .col-md-3
                                    label.control-label 第四层
                                    input.form-control(name="gsi_plies_4", type="text")
                            .form-group
                                .col-md-6
                                    label.control-label 说明
                                    textarea.form-control(name="gs_explain", row="3")
                                .col-md-6
                                    label.control-label 捻制次数
                                    input.form-control(name="nzcs", type="text")
                        .modal-footer
                            button.btn.btn-default(type="button",id="cancel", data-dismiss="modal") 取消
                            button.save.btn.btn-primary(type="submit",id="submit") 保存
                            button.save.btn.yellow(type="button",id="update") 修改
                            button.btn.red(id="delete" style="position:absolute;left:10px;bottom:15px;background-color:rgb(245,128,128);") 删除
block page-js
    script(src='/js/vendor/bootstrap-datetimepicker2.js')
    script(src='/js/vendor/bootstrap-datetimepicker.zh-CN.js')
    script(src='/js/vendor/plugins/select2/select2.js')
    script(src="/js/admin/gssjgb.js")
                                                                                                             